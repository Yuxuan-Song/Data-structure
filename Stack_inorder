#include <stdio.h>
#define maxsize 100

typedef struct stack
{
	int data[maxsize];
	int top;
	int stacksize;
}sqStack;

int InitStack(sqStack s)
{
	s.top=-1;
	s.stacksize=maxsize;
	
	return 0;
}
int push(sqStack &s,int e)
{
	if(s.top == maxsize-1)
	{
		printf("栈满！\n");
		return 0;
	}
	s.data[++s.top]=e;
	
	return 0;
}
int pop(sqStack &s,int e)
{
	if(s.top == -1)
	{
		printf("The stack is empty now!\n");
		return 0;
	}
	e=s.data[s.top--];
	printf("%d\n",e);
	
	return e;
}
int main()
{
	int i,e,n;
	sqStack s;
	printf("创建栈！\n");
	InitStack(s);
	printf("OK！\n");
	printf("Please input the length:\n");
	scanf("%d",&n);
	for(i=0;i<n;i++)
	{
		printf("Please input the %d numbers:\n",i+1);
		scanf("%d",&e);
		push(s,e);
	}
	for(i=n;i>0;i--)
	{
		printf("The %d number is:",i);
		pop(s,e);
	}
	
	return 0;
}
